<reactive:ReactiveWindow
 d:DesignHeight="450"
 d:DesignWidth="800"
 mc:Ignorable="d"
 x:Class="Vk_Friends_Sender.Views.MainWindow"
 x:DataType="vm:MainWindowModel"
 x:TypeArguments="vm:MainWindowModel"
 xmlns="https://github.com/avaloniaui"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:reactive="http://reactiveui.net"
 xmlns:vm="clr-namespace:Vk_Friends_Sender.ViewModels"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

 <Design.DataContext>
  <vm:MainWindowModel />
 </Design.DataContext>

 <Grid ColumnDefinitions="1*,1*" RowDefinitions="2*,1*">
  <!--  Cookies/Proxies load  -->
  <Grid
   ColumnDefinitions="1*, 1*"
   Grid.Column="0"
   Grid.Row="0"
   Margin="10"
   RowDefinitions="*">
   <!--  Cookies  -->
   <StackPanel
    Grid.Column="0"
    Margin="5,0"
    Orientation="Vertical">
    <Label Margin="0,0,0,5">Cookies</Label>

    <StackPanel Orientation="Horizontal">
     <StackPanel.Styles>
      <Style Selector="Button">
       <Setter Property="Margin" Value="5, 0" />
      </Style>
     </StackPanel.Styles>

     <Button Command="{Binding Path=Load}" Margin="0,0,5,0">Load</Button>
     <Button Command="{Binding Path=Check}">Check</Button>
     <Button Command="{Binding Path=Clear}">Clear</Button>
    </StackPanel>

    <ListBox ItemsSource="{Binding Path=Proxies}" />
   </StackPanel>

   <!--  Proxies  -->
   <StackPanel Grid.Column="1" />
  </Grid>

  <!--  Accounts ids  -->
  <Grid Column="1" Row="0" />

  <!--  Control panel  -->
  <Grid
   Column="0"
   ColumnSpan="2"
   Row="1" />
 </Grid>
</reactive:ReactiveWindow>
